@import 'reset.less';
@import 'utilities.less';
@import 'icons.less';
@import 'colors.less';

/*** VARIABLES ***/

@mobile: ~"all and (max-width: 630px)";
@tablet: ~"all and (max-width: 759px)";
@desktop: ~"all and (min-width: 760px)";

/*** STYLES ***/

@font-face {
  font-family: 'Montserrat';
  src: url(../fonts/Montserrat/Montserrat-Regular.ttf);
}

html,
body {
  margin: 0 auto;
  padding: 10px;
  width: 800px;
  font-family: 'Montserrat';
  font-size: 16px;
  color: @color-tertiary-4;
  background: lighten(@light-gray, 2%);
}

/*** Typography and Icons ***/

h1 {
  font-size: 2.5em;
  line-height: 1.5em;

  @media @tablet {
    font-size: 1.5em;
  }
}

h2 {
  font-size: 1.2em;
  line-height: 1.2em;
}

/*** Buggui Stuff ***/

[data-mode^='SCALE_X'] {
  cursor: ew-resize;
}

[data-mode^='SCALE_Y'] {
  cursor: ns-resize;
}

[data-mode^='TRANSLATE'] {
  cursor: move;
}

[data-mode^='ROTATE'] {
  cursor: -webkit-grab;
}

.mousedown[data-mode^='ROTAT'] {
  cursor: -webkit-grabbing;
}

.canvas-host {
  background: @white;
  border: 3px solid @color-tertiary-2;
  width: 800px;
  height: 600px;
  margin: 20px auto;
}

.btn {
  display: inline-block;
  padding: 10px 20px;
  margin-bottom: 10px;
  font-size: 14px;
  font-weight: bold;
  line-height: 1;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
  background: @light-gray;
  border: 1px solid darken(@light-gray, 20%);
  text-decoration: none;
  border-radius: 3px;
  color: @color-tertiary-0;
}

.btn:hover,
.btn:focus,
.btn.focus {
  color: @color-tertiary-4;
  text-decoration: none;
  background: @white;
  border: 1px solid darken(@light-gray, 40%);
}

.btn:active,
.btn.active {
  background-image: none;
  outline: 0;
  -webkit-box-shadow: inset 0 3px 5px rgba(0, 0, 0, .125);
          box-shadow: inset 0 3px 5px rgba(0, 0, 0, .125);
}

.cursor-mode {
  margin-top: 25px;
  line-height: 2;
  text-align: right;
}

.instructions {
  margin: 20px 20px 40px 20px;
  line-height: 1.8;

  li {
    list-style: disc;
    list-style-position: inside;
  }

    h2 {
    font-size: 1.8em;
  }
}